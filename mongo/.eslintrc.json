{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-console": 0
	},
	"globals": {
		"require": false,
		"global": false,
		"module": false,
		"describe": false,
		"it": false,
		"beforeEach": false
	}
}
