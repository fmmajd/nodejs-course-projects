{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			4,
			"tab",
			{
				"SwitchCase": 3
			}
		],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-console": 0
	},
	"globals": {
		"module": false,
		"require": false
	}
}
